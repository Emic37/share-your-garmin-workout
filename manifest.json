{
    "name": "Share your Garmin workout",
    "version": "1.0.0",
    "description": "Share your personal workout with your friends",
	"author": "Filippo Pisano",
	"default_locale": "en",
	"icons": { 
		"16": "icons/gsyw_16.png",
		"48": "icons/gsyw_48.png"
	},
    "content_scripts": [
	   {
	     "matches": ["https://connect.garmin.com/modern/workout/*"],
	     "js": ["garmin-share.js"]
	   },
	   {
	     "matches": ["https://connect.garmin.com/modern/workouts"],
	     "js": ["garmin-import.js"]
	   }
	 ],
	"permissions": [
		"webRequest",
		"*://connect.garmin.com/*"
	],
    "manifest_version": 2
 }